<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/complaintDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/registeredBy"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/registeredBy"
            android:text="Complaint Details" />


        <TextView
            android:id="@+id/complaint_remarks_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/complaintDetails"
            android:layout_marginTop="4dp"
            android:text="Complaint Details" />
        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/registeredBy"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:text="Timestamp"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="6dp"

            />

        <TextView
            android:id="@+id/registeredBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="6dp"
            />

        <TextView
            android:id="@+id/solvedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solved By"
            android:layout_below="@id/complaint_remarks_1"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
